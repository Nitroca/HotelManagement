             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Project"
             mc:Ignorable="d" Background="Lavender"
             d:DesignHeight="350" d:DesignWidth="535">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Reservation" Click="Reservation_Click"/>
            <MenuItem Header="Customer" Click="Customer_Click"/>
            <MenuItem Header="Booking" Click="Booking_Click"/>
            <MenuItem Header="Rooms" Click="Rooms_Click"/>
            <MenuItem Header="Employees" Click="Employees_Click"/>
            <MenuItem Header="Service" Click="Service_Click"/>
            <MenuItem Header="Extra" Click="Extra_Click"/>
            <MenuItem Header="Security Camera" Click="SecurityCam_Click"/>
        </Menu>

        <Grid x:Name ="contentct1"/>

        
    </DockPanel>
    
</UserControl>

<UserControl x:Class="Hotel_Project.Reservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Project"
             mc:Ignorable="d" Background="Lavender" Loaded="Reservation_Loaded"
             d:DesignHeight="350" d:DesignWidth="535">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"  Text="Reservation"  HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Text="Customer"  HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="2" Text="Details"  HorizontalAlignment="Center"/>

        <ListBox x:Name="lireservation" Grid.Column="0" Margin="10,22,10,13" Grid.Row="1"
                 DisplayMemberPath="reservation_ID"/>

        <ListBox x:Name="licustomer"  Grid.Column="1" Margin="10,20,10,13" Grid.Row="1"
                 ItemsSource="{Binding ElementName=lireservation, Path=SelectedItem.customer}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding Path=Customer_Name}"/>
                        <Run Text=""/>
                        <Run Text="{Binding Path=Customer_Firstname}"/>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>

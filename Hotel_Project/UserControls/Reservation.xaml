<UserControl x:Class="Hotel_Project.Reservation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hotel_Project"
             mc:Ignorable="d" Background="Lavender"
             d:DesignHeight="350" d:DesignWidth="535">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="Klasse"
            FontSize="23"
            Grid.Column="0"
            Grid.Row="0"
             />

        <TextBlock
            Text="Details"
            FontSize="23"
            Grid.Column="1"
            Grid.ColumnSpan="2"
             />

        <ListBox
            x:Name="liklassen"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            ItemsSource="{Binding AlleLehrer}"
            DisplayMemberPath="L_ID"
            SelectedValuePath="L_ID"
            SelectedItem="{Binding Path=GewaehlteLehrer, Mode=TwoWay}" />

        <StackPanel
            DataContext="{Binding ElementName=liklassen, Path=SelectedItem}"
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="5 5 5 5">

            <TextBlock
                Text="Lehrername" />
            <TextBox
                Text="{Binding Path=L_Name}"
                MaxLength="15" />

            <TextBlock
                Text="Lehrer Vorname" />
            <TextBox
                Text="{Binding Path=L_Vorname}"
                MaxLength="15" />

            <TextBlock
                Text="Lehrer ID" />
            <TextBox
                Text="{Binding Path=L_ID}"
                MaxLength="15" />

            <TextBlock
                Text="Lehrer Gehalt" />
            <TextBox
                Text="{Binding Path=L_Gehalt}"
                MaxLength="15" />

            <TextBlock
                Text="Geburtsdatum:" />
            <TextBox
                Text="{Binding Path=L_Gebdat, StringFormat=dd.MM.yyyy}" />

            

        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="2">

            <TextBlock
                Text="Fächer"></TextBlock>
            
            <ListBox
            x:Name="listunden"      
            ItemsSource="{Binding LehrerKlasse}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding ST_G_Fach}" />

                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="2">

            <TextBlock
                Text="Stunden"></TextBlock>

            <ListBox
                x:Name="listundenST"
                ItemsSource="{Binding LehrerKlasse}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding ST_Stunde}" />

                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
